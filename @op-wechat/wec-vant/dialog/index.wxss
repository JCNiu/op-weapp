@import '../common/index.wxss';
.van-dialog {
  width: 560rpx;
  overflow: hidden;
	font-size: 16px;
	border-radius: 4px;
	background-color: #fff;
}
.van-dialog__header {
	font-weight: 500;
	padding-top: 25px;
	text-align: center;
}
.van-dialog__header--isolated {
	padding: 25px 0;
}
.van-dialog__message {
	padding: 50rpx;
	max-height: 60vh;
	line-height: 1.5;
  color: #686868;
	font-size: 30rpx;
	overflow-y: auto;
	text-align: center;
	-webkit-overflow-scrolling: touch;
}
.van-dialog__message--has-title {
	padding-top: 12px;
	color: #7d7e80;
}
.van-dialog__message--left {
	text-align: left;
}
.van-dialog__message--right {
	text-align: right;
}
.van-dialog__footer {
	display: -webkit-flex;
	display: flex;
}
.van-dialog__button {
	-webkit-flex: 1;
	flex: 1;
}
.van-dialog__cancel,
.van-dialog__confirm {
  color: #000;
  font-size: 36rpx;
  border: none !important;
  border-top: 1rpx solid #d2d3d5 !important;
}
.van-dialog__confirm,
.van-dialog__confirm:active {
	/* color: #1989fa !important; */
  color: #ea3323 !important;
  border-left: 1rpx solid #d2d3d5  !important;
}
.van-dialog-bounce-enter {
	opacity: 0;
	-webkit-transform: translate3d(-50%, -50%, 0) scale(.7);
	transform: translate3d(-50%, -50%, 0) scale(.7);
}
.van-dialog-bounce-leave-active {
	opacity: 0;
	-webkit-transform: translate3d(-50%, -50%, 0) scale(.9);
	transform: translate3d(-50%, -50%, 0) scale(.9);
}
