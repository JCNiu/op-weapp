@import '../common/index.wxss';

.van-field__body {
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
}

.van-field__body--textarea {
  min-height: 48rpx;
}

.van-field__input {
  border: 0;
  margin: 0;
  padding: 0;
  width: 100%;
  height: 48rpx;
  resize: none;
  display: block;
  text-align: left;
  min-height: 48rpx;
  color: #333;
  line-height: inherit;
  box-sizing: border-box;
  background-color: transparent;
}

.van-field__input--disabled {
  opacity: 1;
  color: #999;
  background-color: transparent;
}

.van-field__input--center {
  text-align: center;
}

.van-field__input--right {
  text-align: right;
}

.van-field__input--error {
  color: #f44;
}

.van-field__placeholder {
  color: #999;
}

.van-field__clear-root {
  height: 48rpx;
}

.van-field__button, .van-field__clear, .van-field__icon-container {
  -webkit-flex-shrink: 0;
  flex-shrink: 0;
}

.van-field__clear, .van-field__icon-container {
  padding: 0 20rpx;
  line-height: inherit;
  margin-right: -20rpx;
  vertical-align: middle;
}

.van-field__clear {
  color: #c9c9c9;
}

.van-field__icon-container {
  color: #999;
}

.van-field__icon {
  display: block !important;
}

.van-field__button {
  padding-left: 20rpx;
}

.van-field__error-message {
  color: #f44;
  font-size: 24rpx;
  text-align: left;
}
